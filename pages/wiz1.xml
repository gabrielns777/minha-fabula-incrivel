<page id="wiz1" bg_image="magocasa.png" bg_music="">
  
  <agent
    id="wizard"
    image="magodavila_teste.png"
    y="240"
    x="center"
    on_click="set(magoDialogo, 1)"
  />

    <agent
    id="mesa"
    image="mesa_teste.png"
    y="420"
    x="center"
  />
  
  <fab-if when="$magoDialogo = 1">
    <agent
      id="dialogo1"
      x="490"
      y="240"
      text="Ah, sabia que viria. Esta é a pior tempestade dos últimos 40 anos. Beba esta poção, pegue esta planta e vá até o castelo em ruínas. Estou certo de que a resposta está lá."
      color="#ffffff"
      font-size="20"
      animation="fade-in-down"
    />
  </fab-if>

  <fab-if when="$magoDialogo = 1">
    <agent
      id="pocao"
      image="pocaocalor_teste.png"
      x="340"
      y="360"
      animation="bounce-in"
      on_click="set(pocaoGet, $pocaoGet = 'true')"
    />
  </fab-if>

  <fab-if when="$magoDialogo = 1">
       <agent
         id="plantacha"
         image="folhascha_teste.png"
         x="420"
         y="390"
         animation="bounce-in"
         on_click="set(plantaGet, $plantaGet = 'true')"
         />
</fab-if>

  <fab-if when="$pocaoGet = 'true' and $plantaGet = 'true'">
     <agent
       id="wiz1ToWiz2"
       text="Pra que serve isso?"
       x="480"
       y="640"
       animation="fade-in"
       on_click="goToPage('wiz2')"
       /> 
   </fab-if>
    
  />
</page>