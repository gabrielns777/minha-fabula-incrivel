  <agent
    id="wizard"
    image="magodavila_teste.png"
    y="240"
    x="center"
    on_click="set(magoDialogo2, 1)"
    />
    
  <agent
    id="mesa"
    image="mesa_teste.png"
    y="420"
    x="center"
    />

  <agent
    id="epidialogo"
    text="Por que você não me falou que tinha um dragão no castelo?"
