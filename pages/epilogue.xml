    on_click="set(epilogueDialogo, 1)"
    />

    <fab-if when="$epilogueDialogo = 1">
    <agent
      id="dialogo"
      x="490"
      y="240"
      text="Trollagem kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
      color="#ffffff"
      font-size="20"
      animation="fade-in-down"
      on_click="goToPage('ending')"
    />
  </fab-if>

  
</page>